<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="192dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:scaleType="fitXY"
      android:id="@+id/ivTitle"
      android:src="@mipmap/demo_03"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:lines="2"
      android:ellipsize="end"
      android:textSize="15sp"
      android:lineSpacingMultiplier="1.2"
      android:id="@+id/tvDetail"
      android:textColor="@color/day_edit_color"
      android:text="4+2CLUB世界环湖之旅新一站|五月一“骑”HIGH，邀约最美春色！"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_location"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/day_edit_hit_color"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvAddress"
        android:layout_gravity="center_vertical"
        android:text="浙江·长兴太湖会"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="12dp"
      android:layout_marginBottom="15dp"
      android:layout_marginRight="12dp"
      android:orientation="horizontal">
    <TextView
        android:layout_width="96dp"
        android:layout_height="26dp"
        android:background="@drawable/border_radius_cornner_white"
        android:text="本周日7:30"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/hot_info_circle_content_color"
        />
      <TextView
          android:layout_width="96dp"
          android:layout_height="26dp"
          android:id="@+id/tvLoveNum"
          android:background="@drawable/border_radius_cornner_white"
          android:text="80人收藏"
          android:layout_marginLeft="10dp"
          android:drawableLeft="@mipmap/icon_collection_min"
          android:paddingLeft="8dp"
          android:textSize="12sp"
          android:textColor="@color/hot_info_circle_content_color"
          android:gravity="center"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:id="@+id/tvType"
        android:textColor="#43c56a"
        android:background="@drawable/border_radius_cornner_green"
        android:gravity="center"
        android:text="免费"/>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@color/background"/>
</LinearLayout>