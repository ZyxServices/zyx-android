<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    >
    <ImageView
        android:id="@+id/auslese_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/icon"
        android:layout_margin="12dp"
        />
    <TextView
        style="@style/pack_name"
        android:id="@+id/tv_title"
        android:textSize="12sp"
        android:text="篮球"
        android:layout_toRightOf="@+id/auslese_head"
        android:paddingTop="15dp"
        />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/day_edit_hit_color"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/concern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/concern"
        android:gravity="center"
        android:textSize="12sp"
        android:drawablePadding="2dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="12dp"
        android:drawableLeft="@mipmap/icon_follow"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"
    android:layout_alignParentBottom="true"
    />
</RelativeLayout>
