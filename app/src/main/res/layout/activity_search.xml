<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/personal_layout"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.gymnast.view.live.activity.SearchActivity">
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
        <TextView
            style="@style/personal_title"
            android:id="@+id/tvTabTitle"
            android:text="发现"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        >
    <RelativeLayout
        android:id="@+id/re_search"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_margin="12dp"
        android:background="@drawable/search_bg"
        >
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/etSearch"
    android:hint="搜索"
    android:textColorHint="@color/background"
    android:textSize="15sp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:background="@null"
    android:textColor="@color/day_edit_hit_color"
    android:drawableLeft="@mipmap/sorlistview_search_bar_icon_normal"
    />
    </RelativeLayout>
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
</LinearLayout>
