<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    >

    <LinearLayout
        style="@style/pack_lin1"
        android:paddingLeft="12dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pack_head"
            style="@style/pack_RoundedImageView"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/pack_name"
                style="@style/pack_name"
                android:text="李娜"
                />
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:text="5月30日\t16:00"
                />
            <TextView
                android:paddingTop="11dp"
                style="@style/pack_name"
                android:text="李娜姐姐我们好喜欢你呀！！！"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/pack_time"
            android:layout_width="0dp"
            android:text="回复"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#00529f"
            style="@style/pack_time"
            android:textSize="12sp"
            />

    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"
    />

</LinearLayout>
