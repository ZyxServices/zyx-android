<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip12"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/setmaster_dialog_top"
    android:orientation="vertical"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="您可以对该成员进行以下操作"
    android:layout_centerInParent="true"
    android:textSize="8sp"
    android:textColor="#9a9a9a"
    />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/llSetMaster"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/setmaster_dialog_bottom"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
<TextView
    android:id="@+id/tvText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="设置为圈主"
    android:textSize="17sp"
    android:textColor="@color/home_tab_pressed_color"
    android:layout_gravity="center"
    android:paddingTop="21.5dp"
    />
    </LinearLayout>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/setmaster_dialog"
        android:text="取  消"
        android:textColor="@color/day_edit_color"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
</LinearLayout>

</LinearLayout>