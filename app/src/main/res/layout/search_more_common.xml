<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   >
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivMoreBack"
            style="@style/personal_back"
            />

        <TextView
            style="@style/personal_title"
            android:text="adafa"
            android:id="@+id/tvTabTitle"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
    <RelativeLayout
    android:id="@+id/re_search"
    android:layout_width="match_parent"
    android:layout_height="31dp"
    android:layout_margin="12dp"
    android:background="@drawable/search_bg"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"></LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSearch"
        android:hint="搜索"
        android:textColorHint="@color/day_edit_hit_color"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@null"
        android:textColor="@color/day_edit_hit_color"
        android:drawableLeft="@mipmap/sorlistview_search_bar_icon_normal"
        />
    </RelativeLayout>
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="240dp"
        android:background="#ffffff"></android.support.v7.widget.RecyclerView>
</LinearLayout>