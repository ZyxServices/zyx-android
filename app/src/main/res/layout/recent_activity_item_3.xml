<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context=".view.hotinfoactivity.RecentActiveActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="186dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/demo_04"
        android:id="@+id/ivDetailBig"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世界杯预选赛活动"
            android:textSize="24sp"
            android:id="@+id/tvBigTitle"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20个活动"
            android:id="@+id/tvBigWholeNum"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</FrameLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="15dp"
             android:orientation="horizontal"
            >
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/play_bottom_ticket_special_1"
                android:background="@drawable/border_radius"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="226dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="@drawable/border_radius_image"
                    android:scaleType="fitCenter"
                    android:id="@+id/ivBig1"
                    android:src="@mipmap/demo_02"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBigName1"
                    android:text="中国-伊朗门票特价"
                    android:textColor="@color/day_textColor"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="免费"
                        android:id="@+id/tvBigType1"
                        android:textSize="12sp"
                        android:textColor="@color/green"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_collection_min"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="13"
                        android:id="@+id/tvBigLove1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/hot_info_circle_content_color"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="9dp"
                android:id="@+id/play_bottom_ticket_special_2"
                android:background="@drawable/border_radius"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="226dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:src="@mipmap/demo_02"
                    android:id="@+id/ivBig2"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国-伊拉克门票特价"
                    android:textColor="@color/day_textColor"
                    android:id="@+id/tvBigName2"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="免费"
                        android:id="@+id/tvBigType2"
                        android:textSize="12sp"
                        android:textColor="@color/green"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_collection_min"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvBigLove2"
                        android:text="13"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/hot_info_circle_content_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="15dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/play_bottom_ticket_special_3"
                android:background="@drawable/border_radius"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="226dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:id="@+id/ivBig3"
                    android:src="@mipmap/demo_02"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBigName3"
                    android:text="中国-日本门票特价"
                    android:textColor="@color/day_textColor"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/tvBigType3"
                        android:text="免费"
                        android:textSize="12sp"
                        android:textColor="@color/green"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:src="@mipmap/icon_collection_min"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="13"
                        android:id="@+id/tvBigLove3"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/hot_info_circle_content_color"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="9dp"
                android:id="@+id/play_bottom_ticket_special_4"
                android:background="@drawable/border_radius"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="226dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:id="@+id/ivBig4"
                    android:src="@mipmap/demo_02"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国-菲律宾门票特价"
                    android:id="@+id/tvBigName4"
                    android:textColor="@color/day_textColor"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/tvBigType4"
                        android:text="免费"
                        android:textSize="12sp"
                        android:textColor="@color/green"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:src="@mipmap/icon_collection_min"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tvBigLove4"
                        android:text="13"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/hot_info_circle_content_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</ScrollView>