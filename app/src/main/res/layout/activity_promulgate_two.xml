<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="开始时间"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvPromulgateStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-06 13:20"
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/day_edit_color"
            android:layout_centerVertical="true"
            android:drawablePadding="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="结束时间"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvPromulgateOverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-07 13:20"
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/day_edit_color"
            android:layout_centerVertical="true"
            android:drawablePadding="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/rlSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="活动地点"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvActivityAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入活动地址"
            android:gravity="right"
            android:textColorHint="@color/day_edit_hit_color"
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/day_edit_hit_color"
            android:layout_centerVertical="true"
            android:drawablePadding="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="活动类型"
            android:layout_gravity="center_vertical"
            />

        <RadioGroup
            android:id="@+id/myRadioGroup"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >

            <RadioButton
                android:id="@+id/buttonUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上活动"
                android:textColor="@color/day_edit_color"
                android:textSize="18sp"
                android:button="@drawable/promulgate_icon_checkbox"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
            <RadioButton
                android:id="@+id/buttonDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线下活动"
                android:textColor="@color/day_edit_color"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:button="@drawable/promulgate_icon_checkbox"
                android:gravity="center_vertical"
                />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/rlMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="活动价格"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvPriceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费"
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/day_edit_color"
            android:layout_centerVertical="true"
            android:drawablePadding="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/rlPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textColor="@color/day_edit_color"
            android:text="活动咨询电话"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvSelectPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/day_edit_color"
            android:layout_centerVertical="true"
            android:drawablePadding="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />

<include layout="@layout/activity_promulgate_advanced_setting"/>

</LinearLayout>
