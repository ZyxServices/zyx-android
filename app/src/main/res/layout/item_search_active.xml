<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:id="@+id/llActiveItem"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivActiveItem"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:background="@drawable/border_image"
            android:src="@mipmap/icon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:background="@color/background1"
            >
            <TextView
                android:id="@+id/tvActiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:text="尽享快乐旅行"
                />
            <TextView
                android:id="@+id/tvActiveStart"
                android:layout_width="76dp"
                android:layout_height="18dp"
                android:background="@drawable/border_radius_cornner_white"
                android:text="6月1日开始"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/hot_info_circle_content_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvActiveFrom"
                android:textColor="@color/hot_info_circle_from_color"
                android:textSize="14sp"
                android:background="@null"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="来自：房端午"
                />
        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/re1"
        style="@style/pack_re1"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/tvActiveSee"
            style="@style/pack_liulan"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/tvActiveZan"
            style="@style/pack_zan"
            />

        <TextView
            android:id="@+id/tvActiveMSG"
            style="@style/pack_msg"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/background"/>
</LinearLayout>