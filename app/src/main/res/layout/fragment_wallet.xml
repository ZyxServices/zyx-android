<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="登录"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/login_btn_normal_color"
            android:background="@drawable/login_radius"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还没登陆哦~快登陆看看吧"
            android:textColor="@color/day_edit_hit_color"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:id="@+id/my_gold"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            style="@style/pack_name"
            android:textSize="15sp"
            android:text="我的金币"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37"
            android:textColor="@color/hot_info_circle_content_color"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_gold"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/buy_gold"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            style="@style/pack_name"
            android:textSize="15sp"
            android:text="购买金币"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:paddingLeft="8dp"
            style="@style/personal_setting_item_more"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_infoTextColor"
            android:textSize="15sp"
            android:text="背包"
            />
        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layoutManager="LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                />

        </HorizontalScrollView>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tablayout"
        android:paddingTop="12dp"
        android:paddingBottom="9dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/day_infoTextColor"
        android:textSize="15sp"
        android:text="金币任务"
        />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            android:id="@+id/tv_open"
            style="@style/pack_name"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:text="打开客户端"
            />
        <TextView
            android:layout_below="@+id/tv_open"
            android:paddingTop="4dp"
            style="@style/pack_name"
            android:textSize="12sp"
            android:textColor="@color/play_bottom_textview_color_red"
            android:text="+5金币"
            />
    <TextView
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text="领取"
        android:background="@drawable/red_textbutton"
        android:gravity="center"
        />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/re_like"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            android:id="@+id/tv_dianzan"
            style="@style/pack_name"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:text="点赞+评论次数满50次"
            />
        <TextView
            android:layout_below="@+id/tv_dianzan"
            android:paddingTop="4dp"
            style="@style/pack_name"
            android:textSize="12sp"
            android:textColor="@color/play_bottom_textview_color_red"
            android:text="+10金币"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成(0/10)"
            android:textColor="@color/hot_info_circle_content_color"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/re_once"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            android:id="@+id/danfa"
            style="@style/pack_name"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:text="单词发帖子赞满100"
            />
        <TextView
            android:layout_below="@+id/danfa"
            android:paddingTop="4dp"
            style="@style/pack_name"
            android:textSize="12sp"
            android:textColor="@color/play_bottom_textview_color_red"
            android:text="+10金币"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成(0/10)"
            android:textColor="@color/hot_info_circle_content_color"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:id="@+id/re_live"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        >
        <TextView
            android:id="@+id/zhibo"
            style="@style/pack_name"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:text="直播1小时"
            />
        <TextView
            android:layout_below="@+id/zhibo"
            android:paddingTop="4dp"
            style="@style/pack_name"
            android:textSize="12sp"
            android:textColor="@color/play_bottom_textview_color_red"
            android:text="+10金币"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成(0/10)"
            android:textColor="@color/hot_info_circle_content_color"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />

</LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>