<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        style="@style/personal_title_background"

        >

        <ImageView
            android:id="@+id/back"
           style="@style/personal_back"
            />

        <TextView
            style="@style/personal_title"
            android:text="我的订单"
            />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/personal_orders_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tablayout"
        style="@style/PackTabLayout"
        android:fillViewport="false" />
    <android.support.v4.view.ViewPager
        android:id="@+id/personal_orders_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />



</LinearLayout>
