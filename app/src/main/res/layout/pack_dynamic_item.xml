<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pack_background"
    >

    <RelativeLayout
        style="@style/pack_lin1"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pack_head"
            style="@style/pack_RoundedImageView"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            />

        <TextView
            android:id="@+id/pack_name"
            style="@style/pack_name"
            android:text="李娜"
            android:layout_toRightOf="@+id/pack_head"
            android:paddingTop="4dp"
            />
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="著名体育运动员"
            android:layout_below="@+id/pack_name"
            android:layout_alignLeft="@+id/pack_name"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="24px"
            android:paddingTop="8dp"
            />


        <TextView
            android:id="@+id/pack_time"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/concern"
            android:text="5月25日\t15:00"
            style="@style/pack_time"
            />
        <TextView
            android:id="@+id/concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/concern"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:drawableLeft="@mipmap/icon_follow"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pack_tv1"
            android:text="@string/pack_tv1"
            style="@style/pack_text"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/pack_image"
        style="@style/pack_lin2"
        >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginRight="10px"
            android:src="@mipmap/ic_test_2"
            />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10px"
            android:layout_height="120dp"
            android:src="@mipmap/ic_test_2"
            />
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:src="@mipmap/ic_test_2"
            />


    </LinearLayout>

    <RelativeLayout
        style="@style/pack_re1"
        >

        <TextView
            style="@style/pack_liulan"
            />

        <TextView
            android:id="@+id/pack_like"
            style="@style/pack_zan"
            />

        <TextView
            android:id="@+id/pack_msg"
            style="@style/pack_msg"
            />


    </RelativeLayout>


</LinearLayout>
