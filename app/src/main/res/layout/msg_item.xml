<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    >


    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/msg_head"
        style="@style/pack_RoundedImageView"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="32dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/msg_head"
        android:layout_alignTop="@+id/msg_head"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/msg_name"
            style="@style/pack_name"
            android:text="切尔西"
            android:textSize="15sp"
            android:layout_marginTop="7dp"

            />
        <TextView
            style="@style/pack_name"
            android:text="切尔西"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:layout_below="@+id/msg_name"
            android:layout_toRightOf="@+id/msg_name"
            />
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天09:00"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12sp"
            android:paddingTop="6dp"
            />

    </LinearLayout>

        <ImageView
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:src="@mipmap/icon"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/msg_head"
            />

</RelativeLayout>
