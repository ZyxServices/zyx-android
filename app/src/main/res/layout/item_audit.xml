<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@drawable/audit_backgroud"
        android:layout_marginTop="@dimen/dip12"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/dip10"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivAvatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_test_2"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"
        android:layout_gravity="center"
        />
<TextView
    android:id="@+id/tvUserName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/day_edit_color"
    android:textStyle="bold"
    android:textSize="15sp"
    android:layout_toRightOf="@+id/ivAvatar"
    android:text="我是大白"
    android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/tvPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/audit_pass"
        android:layout_alignParentRight="true"
        android:textSize="11sp"
        android:textColor="@color/green"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginRight="15dp"
        />
    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/address_icon_checkbox"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvRealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_edit_hit_color"
            android:drawableLeft="@mipmap/btn_user"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:text="张三"
            />
        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:text="男"
            />
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_edit_hit_color"
            android:drawablePadding="10dp"
            android:layout_marginRight="30dp"
            android:textSize="12sp"
            android:text="22"
            />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="12331132123"
            android:textColor="@color/day_edit_hit_color"
            android:drawableLeft="@mipmap/btn_phone"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="@dimen/dip10"
    >
    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/day_edit_hit_color"
        android:drawableLeft="@mipmap/btn_means"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:text="2782374237432040"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/day_edit_hit_color"
        android:drawableLeft="@mipmap/btn_adress"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:text="四川省"
        android:layout_marginTop="@dimen/dip10"
        android:visibility="gone"
        />

</LinearLayout>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rvAudit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager"
        android:layout_marginBottom="15dp"
        tools:listitem="@layout/item_recycle_audit"
        />
    </LinearLayout>
    </LinearLayout>