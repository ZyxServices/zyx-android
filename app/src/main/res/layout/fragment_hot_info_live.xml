<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:id="@+id/rlItem"
    android:padding="2dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

      <ImageView
          android:id="@+id/hot_info_live_picture"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@mipmap/ic_test_3"
          />

      <TextView
          android:id="@+id/hot_info_live_state"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="8dp"
          android:drawableLeft="@mipmap/stand_icon_live"
          android:drawablePadding="4dp"
          android:text="Live"
          />

      <TextView
          android:id="@+id/hot_info_live_viewer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="8dp"
          android:drawableLeft="@mipmap/stand_icon_phople"
          android:drawablePadding="4dp"
          android:text="17000"
          />

      <TextView
          android:id="@+id/hot_info_live_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          />
    </FrameLayout>
  </LinearLayout>
  <ProgressBar
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/progressBar"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="580dp"
      android:layout_marginStart="580dp"
      />
</RelativeLayout>

