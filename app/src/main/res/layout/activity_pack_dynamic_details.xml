<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/personal_layout">
    <RelativeLayout
        style="@style/personal_title_background"
        android:paddingRight="12dp"
        >

        <ImageView
            android:id="@+id/personal_back"
            style="@style/personal_back"
            />

        <TextView
            style="@style/personal_title"
            android:text="李娜圈"
            />


        <ImageView
            android:id="@+id/personal_menu"
            style="@style/personal_back"
            android:src="@mipmap/nav_more"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        style="@style/pack_lin1"
        android:paddingLeft="12dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pack_head"
            style="@style/pack_RoundedImageView"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            />

        <TextView
            android:id="@+id/pack_name"
            style="@style/pack_name"
            android:text="李娜"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/pack_time"
            android:layout_width="0dp"
            android:text="5月25日\t15:00"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            style="@style/pack_time"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pack_tv1"
            style="@style/pack_text"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        app:layoutManager="LinearLayoutManager"
        android:background="@color/background"
        tools:listitem="@layout/item_message_list"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        >


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="回复..."

    android:textColorHint="@color/day_edit_hit_color"
    android:paddingLeft="12dp"
    android:background="@null"
    />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_like"
        android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
</LinearLayout>
