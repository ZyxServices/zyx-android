<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pack_background"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="10dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/address_name"
            style="@style/personal_setting_item_text"
            android:text="房珍萍"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/address_phone"
            style="@style/personal_setting_item_text"
            android:text="18610161125"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/day_edit_hit_color"
        android:textSize="12sp"
        android:text="北京市朝阳区北苑路36号金源大厦2层"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        >


        <CheckBox
            android:id="@+id/address_checkBox"
            style="@style/checkbox_address"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_toLeftOf="@+id/address_delete"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:paddingLeft="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12dp"
            />

    </RelativeLayout>


</LinearLayout>
