<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pack_background"

    >

<LinearLayout
    style="@style/pack_lin1"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_head"
        style="@style/pack_RoundedImageView"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"
        />

    <TextView
        android:id="@+id/activity_name"
        style="@style/pack_name"
        android:text="李娜"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        />
    <TextView
        android:id="@+id/activity_time"
        android:layout_width="wrap_content"
        android:text="5月25日\t15:00"
        android:layout_gravity="center_vertical"
        style="@style/pack_time"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
 <ImageView
     android:id="@+id/activity_imgUrl"
     android:layout_width="113dp"
     android:layout_height="113dp"
     android:background="@drawable/border_image"
     android:src="@mipmap/icon"
     />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:background="@color/background1"
    >
<TextView
    android:id="@+id/activity_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/day_edit_color"
    android:textStyle="bold"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:textSize="15sp"
    android:text="尽享快乐旅行"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activity_content"
    android:textColor="@color/day_edit_color"
    android:textSize="12sp"
    android:paddingBottom="10dp"
    android:lines="2"
    android:ellipsize="end"
    android:text="哇啦啦乌拉拉哇啦啦乌拉拉哇啦啦乌拉拉哇啦啦乌拉拉"
    />
    <TextView
        android:id="@+id/activity_startTime"
        android:layout_width="76dp"
        android:layout_height="18dp"
        android:background="@drawable/border_radius_cornner_white"
        android:text="6月1日开始"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/hot_info_circle_content_color"
        />
</LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/re1"
        style="@style/pack_re1"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/activity_look"
            style="@style/pack_liulan"
             />

        <TextView
            android:id="@+id/activity_comment"
            style="@style/pack_zan"
            />

        <TextView
            android:id="@+id/activity_zan"
            style="@style/pack_msg"
            />


    </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"
    />

</LinearLayout>
