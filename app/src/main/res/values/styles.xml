<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="dialog_common" parent="@style/Theme.AppCompat.Dialog">
    <item name="android:windowBackground">@drawable/dialog_background</item>
  </style>

  <style name="dialog_bottom" parent="@style/dialog_common">
    <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
    <item name="android:windowAnimationStyle">@style/dialog_animation</item>
  </style>

  <style name="quick_option_dialog" parent="@style/dialog_common">
    <item name="android:windowBackground">@color/white40</item>
    <item name="android:windowAnimationStyle">@style/dialog_animation</item>
  </style>

  <style name="dialog_animation" parent="android:Animation">
    <item name="@android:windowEnterAnimation">@anim/quick_option_dialog_enter</item>
    <item name="@android:windowExitAnimation">@anim/quick_option_dialog_exit</item>
  </style>

  <!-- quick option style start -->
  <style name="quick_option_item">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/home_quick_option_dialog_padding</item>
  </style>

  <style name="quick_option_img">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="quick_option_item_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/home_quick_option_dialog_margin_top</item>
    <item name="android:textColor">@color/drawer_menu_text</item>
    <item name="android:textSize">@dimen/home_quick_option_text_size</item>
  </style>
  <!-- quick option style end -->

  <!-- stand start -->
  <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">@android:color/holo_red_dark</item>
  </style>
  <style name="PackTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="android:textSize">35sp</item>
    <item name="tabSelectedTextColor">@android:color/holo_red_dark</item>
  </style>
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textColor">@color/gray</item>
    <item name="textAllCaps">false</item>
  </style>

  <!-- stand end -->
    <!-- 打开相机的dialog -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
    <style name="log_out_dialog">
        <item name="android:windowEnterAnimation">@anim/log_out_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/log_out_exit_dialog</item>
    </style>
  <!--pack start-->
  <style name="pack_background">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:background">@color/white</item>
  </style>


    <style name="pack_RoundedImageView">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@mipmap/ic_test_3</item>
    </style>
    <style name="pack_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_textColor</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="pack_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_textColor</item>
    </style>

    <style name="pack_lin1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="pack_time">
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="pack_lin2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

  <style name="pack_re1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>
  <style name="pack_liulan">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/day_edit_hit_color</item>
    <item name="android:textSize">10sp</item>
    <item name="android:text">109次浏览</item>
    <item name="android:layout_centerVertical">true</item>
  </style>


    <style name="pack_zan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:drawableLeft">@mipmap/like_normal</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="pack_msg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:drawableLeft">@mipmap/icon_msg</item>
        <item name="android:drawablePadding">4dp</item>
    </style>


  <!-- personal -->

  <style name="personal_title_background">
  <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/home_tab_pressed_color</item>
    <item name="android:layout_height">64dp</item>
  </style>
  <style name="personal_title_background2">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/home_tab_pressed_color</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:paddingLeft">0dp</item>
  </style>
  <style name="personal_back">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:src">@mipmap/navigation_return</item>
  </style>


  <style name="personal_title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>


  <style name="personal_layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/white</item>
    <item name="android:orientation">vertical</item>

  </style>
<style name="head_bg">

    <item name="android:background">@mipmap/icon_add_pictures</item>
    <item name="android:color">@color/tablayout</item>

</style>


  <style name="Dialog_Fullscreen"  parent="android:Theme.Light">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:background">#e6000000</item>
    <item name="android:windowIsTranslucent">true</item>
    <!-- window背景颜色 -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!-- 屏幕内容区域以外的背景是否可以设置灰度值(与backgroundDimAmount搭配使用) -->
    <item name="android:backgroundDimEnabled">true</item>
    <!-- 灰度值 -->
    <item name="android:backgroundDimAmount">0.6</item>
  </style>
  <style name="personal_setting_item">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginRight">12dp</item>
    <item name="android:layout_marginLeft">12dp</item>
  </style>

  <style name="personal_setting_item_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/day_edit_color</item>
    <item name="android:layout_centerVertical">true</item>
  </style>


  <style name="personal_setting_item_more">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@mipmap/icon_more</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
  </style>

  <style name="personal_setting_item_line">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/background</item>
    <item name="android:layout_marginLeft">12dp</item>
  </style>

  <style name="personal_setting_item_data">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/day_edit_hit_color</item>
    <item name="android:textSize">15sp</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>

  </style>

<style name="checkbox_address" >
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:textSize">12sp</item>
  <item name="android:text">设为默认</item>
  <item name="android:textColor">@color/checkbox_text</item>
  <item name="android:button">@drawable/address_icon_checkbox</item>
</style>

<style name="togglebutton" parent="@android:style/Widget.CompoundButton">

  <item name="android:button">@drawable/switch_btn</item>
</style>
  <style name="main_menu_animstyle">
    <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
    <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
  </style>

  <style name="dialog">
    <item name="android:drawable">@drawable/dialog</item>
    <item name="android:background">@mipmap/dialog</item>
  </style>


  <style name="pop_text_style">
    <item name="android:textColor">@color/login_input_text_color</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

  <style name="advanced_setting_style">
    <item name="android:background">@drawable/advanced_setting_selector</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
  </style>

    <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>


</resources>
